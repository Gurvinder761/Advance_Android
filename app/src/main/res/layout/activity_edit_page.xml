<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageUser"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_user" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_rounded_corner"
            android:hint="Name"
            android:maxLength="40"
            android:maxLines="1"
            android:minHeight="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageUser" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_rounded_corner"
            android:hint="Gender"
            android:maxLength="40"
            android:maxLines="1"
            android:minHeight="50dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextName"
            app:layout_constraintTop_toBottomOf="@+id/editTextName" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_rounded_corner"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Date Of Birth"
            android:maxLines="1"
            android:minHeight="50dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextGender"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_rounded_corner"
            android:hint="Latitude"
            android:inputType="numberDecimal"
            android:maxLength="15"
            android:maxLines="1"
            android:minHeight="50dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextDOB"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextDOB"
            app:layout_constraintTop_toBottomOf="@+id/editTextDOB" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_rounded_corner"
            android:hint="Longitude"
            android:maxLength="15"
            android:maxLines="1"
            android:minHeight="50dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextLatitude"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_rounded_corner"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Country"
            android:maxLines="1"
            android:minHeight="50dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextLongitude"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonDeleteData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_button"
            android:padding="8dp"
            android:text="Delete"
            app:layout_constraintTop_toBottomOf="@+id/editTextCountry"
            tools:layout_editor_absoluteX="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
